function(username) {
  apiVersion: 'v1',
  kind: 'ConfigMap',
  metadata: {
    name: 'pgadmin-config',
    namespace: username + '-tools',
  },
  data: {
    'servers.json':
      std.format('{"Servers": {"1": {"Name": "PostgreSQL DB", "Group": "Servers", "Port": 5432, "Username": "postgres", "Host": "more-robust-cluster-%s-rw.%s-tools.svc.cluster.local", "SSLMode": "prefer", "MaintenanceDB": "postgres"}}}', [username]),
  },
}
